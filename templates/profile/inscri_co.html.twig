{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="fas fa-user-astronaut p-5" style="border: solid 3px #fff; border-radius: 100px; font-size: 300px;"></div>
		</div>
		<div class="col-md-8">
			<div>
				{% if etat == 'inscription' %}
					<h2>S'inscrire</h2>
					{% if form != 'undefined' %}
						{{ form(form) }}
					{% endif %}
				{% elseif etat == 'connection' %}
					<h2>Se connecter</h2>
					{% if error == 'erreur' %}
						<!-- <div style="color:red;">{# {{ error.messageKey|trans(error.messageData, 'security') }} #}</div> -->
						<div class="alert alert-danger alert-dismissible fade show" role="alert">
					    <strong>Erreur</strong> : Identifiant ou mot de passe incorrect.
					    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					    </div>
						<!-- add timer & close -->
					{% endif %}
					{{ form(form2) }}
				{%endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}
