{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="fas fa-user-astronaut p-5" style="border: solid 3px #fff; border-radius: 100px; font-size: 300px;"></div>
		</div>
		<div class="col-md-8">
			<div>
				{% include "_toasts.html.twig" %}
				{% if etat == 'connection' %}
					<h2>Se connecter</h2>
					{% if error %}
						<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					<form action="{{ path('app_prof_connect') }}" method="post">
						<label class="form-label required" for="username">Email</label>
						<input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}" style="margin-bottom:16px;">

						<label class="form-label required" for="password">Password</label>
						<input class="form-control" type="password" id="password" name="_password" style="margin-bottom:16px;">

						{# If you want to control the URL the user is redirected to on success
						<input type="hidden" name="_target_path" value="/profile"> #}

						<button class="btn-primary btn" type="submit">Login</button>
					</form>
				{% elseif etat == 'inscription' %}
					<h2>S'inscrire</h2>
					{{ form(form) }}
				{%endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}
