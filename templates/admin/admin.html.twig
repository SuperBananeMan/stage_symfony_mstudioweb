{% extends 'base.html.twig' %}

{% block title %}Admin forum | VideoTube{% endblock %}

{% block body %}
<style>
.lienTot{
	display:block;
	text-decoration:none;
}

.i-red{
	color:red;
}
.i-green{
	color:green;
}
.i-yellow{
	color:orange;
}
</style>
<div class="container">
	<div class="row">
		<button type="button" class="btn btn-success btn-sm" style="width:100px;margin-left:20px;margin-bottom:10px;">Add a new thread</button>
		<div class="col-md-12">
			<div>
				<table class="table table-dark table-striped table-hover table-bordered border-dark">
					<thead>
						<tr>
						<th scope="col">#</th>
						<th scope="col">User</th>
						<th scope="col">Reason</th>
						<th scope="col">Status</th>
						<th scope="col">Created at</th>
						<th scope="col">Last update at</th>
						</tr>
					</thead>
					<tbody>
						{% for info in pageradminforum %}
							<tr>
								<th scope="row">{{ info.id }}</th>
								<td>
									<a class="lienTot" href="{{ path('app_admin_page', {'slug': info.slug}) }}">{{ info.username }}</a>
								</td>
								<td>
									<a class="lienTot" href="{{ path('app_admin_page', {'slug': info.slug}) }}">{{ info.reason }}</a>
								</td>
								<td>
									<a class="lienTot" href="{{ path('app_admin_page', {'slug': info.slug}) }}">{{ info.status }}
										{% if info.status == 'Closed' %}
											<i class="fas fa-times-circle i-red"></i>
										{% elseif info.status == 'Open' %}
											<i class="fas fa-exclamation-circle i-green"></i>
										{% elseif info.status == 'Waiting' %}
											<i class="fas fa-question-circle i-yellow">
										{% endif %}
									</a>
								</td>
								<td>
									<a class="lienTot" href="{{ path('app_admin_page', {'slug': info.slug}) }}">{{ info.createdAt | date('m-d-Y H:i:s') }}</a>
								</td>
								<td>
									<a class="lienTot" href="{{ path('app_admin_page', {'slug': info.slug}) }}">{{ info.updatedAt|ago }}</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}