<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}VideoTube{% endblock %}</title>

        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap" rel="stylesheet">
		<link href="https://unpkg.com/video.js@7/dist/video-js.min.css" rel="stylesheet"/>
		<link href="https://unpkg.com/@videojs/themes@1/dist/city/index.css" rel="stylesheet"/>

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
		<div class="mb-5">
			<!-- Main Navigation -->
			<nav class="navbar navbar-expand-lg navbar-dark  mb-5" style="background-color: #27333A;">
				<div class="container-fluid">
					<a class="navbar-brand" href="/">
						<i class="fas fa-file-video"></i>
						VideoTube
					</a>
<style type="text/css">
.search{
	border:solid 3px white;
	border-radius:0px 50px 50px 0px;
	background-color:white;
	width:4%;
}
.search:hover{
	background-color:#e0e0e0;
}
.errspan {
	pointer-events: none;
	float: right;
	margin-right: 10px;
	margin-top: -24px;
	position: relative;
	color: black;
}
.search-bar{
	border:solid 3px white;
	border-radius:50px;
	background-color:white;
	width:40%;
}
</style>
<!-- <form id="formSearch" action="{{ path('app_search') }}" method="post"> -->
	<!-- <div class="position-absolute top-50 start-50 translate-middle search-bar"> -->
		<!-- <input type="text" id="search" name="search" style="width:95%;border:solid 3px white;border-radius:50px 0px 0px 50px;"> -->
		<!-- <input type="submit" class="search" id="search-button" name="search-button" value=""> -->
		<!-- <span class="fas fa-search errspan" id="clickSpan" onclick="spanClick()"></span> -->
	<!-- </div> -->
<!-- </form> -->
					{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
					{% if formSearch != '' %}
						{{ form_start(formSearch, {'attr': {'novalidate': 'novalidate'}}) }}
							<div class="position-absolute top-50 start-50 translate-middle search-bar">
								<input id="search" style="width:95%;border:solid 3px white;border-radius:50px 0px 0px 50px;display: inline;"
									name="{{ field_name(formSearch.search) }}"
									value="{{ field_value(formSearch.search) }}"
									placeholder="{{ field_label(formSearch.search) }}"
									class="form-control"
								/>
								<button type="submit" class="search" id="search-button" name="search-button" value=""><i class="fas fa-search"></i></button>
							</div>
						{{ form_end(formSearch) }}
					{% endif %}
					{% endif %}
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					
					<div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNavDropdown">
						<ul class="navbar-nav">
							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item">
									<a class="nav-link" style="margin-top:20px;" href="{{ path('app_admin' ) }}">Admin Forum</a>
								</li>
							{% endif %}
							{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
							<li class="nav-item">
								<a class="nav-link" style="margin-top:20px;" href="/video/newform">Upload a video</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" style="margin-top: 20px;" href="/browse">Video browse</a>
							</li>
							{% endif %}

								<li class="nav-item dropdown">
									<div class="btn-group">
										<a class="btn" type="button" href="{{ path('app_prof_show' ) }}">
											{{ include('pfp_nav.html.twig') }}
											{% if block("i") is defined %}
												{% block i %}{% endblock %}
											{% elseif block("img") is defined %}
												{% block img %}{% endblock %}
											{% endif %}
										</a>
										<a type="button" class="btn btn-lg dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false" style="padding-top:24px;color:grey;">
										<span class="visually-hidden">Toggle Dropdown</span>
										</a>

										<ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdownMenuLink">
											{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
												<li><a class="dropdown-item" href="{{ path('app_prof_show' ) }}">Profile</a></li>
											{% endif %}
											<li><a class="dropdown-item" href="{{ path('app_prof_sign' ) }}">Sign in</a></li>
											<li><a class="dropdown-item" href="{{ path('app_prof_connect' ) }}">Login</a></li>
											{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
												<li><a class="dropdown-item" href="/browse">My videos</a></li>
											{% endif %}
											{% if is_granted('ROLE_ADMIN') %}
												<li><a class="dropdown-item" href="{{ path('app_admin' ) }}">Admin Forum</a></li>
											{% endif %}
											{% if is_granted('ROLE_ADMIN') %}
												<li><a class="dropdown-item" href="{{ path('app_prof_deconnect') }}">Sign Out</a></li>
											{% endif %}
										</ul>
									</div>
								</li>
						</ul>
					</div>
				</div>
			</nav>
			<!-- End Main Navigation -->
		
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
		</div>

        {% block body %}{% endblock %}

        <!-- Footer -->
        <div class="container mt-5">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                <div class="col-md-4 d-flex align-items-center">
                    <span class="me-1" style="color: red;"><i class="fas fa-heart"></i></span>
                    <span class="text-muted me-1">The guys and gals at</span>
                    <a target="_blank" href="https://symfonycasts.com/" style="color: #25a1dd" class="mb-3 me-2 mb-md-0 text-decoration-none lh-1">
                        SymfonyCasts
                    </a>
                </div>

                <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                    <li class="ms-3"><a class="text-muted" target="_blank" href="https://github.com/SymfonyCasts/symfony6"><i class="fab fa-github"></i></a></li>
                </ul>
            </footer>
        </div>
        <!-- End Footer -->
    </body>
</html>
